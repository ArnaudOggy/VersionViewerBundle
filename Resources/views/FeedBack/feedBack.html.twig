<form id="feedBackForm" action="{{ path('bbr_version_viewer_feedback') }}" method="POST" {{ form_enctype(form) }}>
	<div class="modal-header">
	    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
		<h2 class="modal-title" id="myModalLabel">Feedback & suggestion Welcome !</h2>
	</div>
	<div class="modal-body">
	    {{ form_widget(form) }}
	</div>
	<div class="modal-footer">
		<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    	<button type="submit" class="btn btn-primary">Send</button>
	</div>
</form>

<script>
$("#feedBackForm").submit(function(form){ 
    $.ajax({
        type: 'POST',
        url: '{{ path("bbr_version_viewer_feedback") }}',
        data: $(this).serialize(),
        cache: false,
        dataType: "html",
        success: function(data){
           $("#feedBack .modal-content .modal-body").html('<div class="alert alert-success">'+data+'</div>');
           $("#feedBack .modal-content .modal-footer").html('<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>');
        }
    });    
    return false;
});
</script>
